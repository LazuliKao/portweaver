# ========================================
# Remote Development Configuration
# ========================================
# Copy this file to .env and configure your settings
# DO NOT commit .env to version control

# ========================================
# SSH Connection Settings
# ========================================
SSH_HOST=192.168.1.1
SSH_PORT=22
SSH_USERNAME=root

# Authentication Method 1: Password (easier but less secure)
SSH_PASSWORD=your_password

# Authentication Method 2: SSH Key (more secure)
# Uncomment and set path to your private key
# SSH_KEY_PATH=~/.ssh/id_rsa
# SSH_KEY_PASSPHRASE=

# ========================================
# Remote Paths
# ========================================
# Where to upload the binary on the remote device
SSH_REMOTE_PATH=/usr/bin

# Service name on the remote device
SSH_REMOTE_SERVICE=portweaver

# ========================================
# Local Build Configuration
# ========================================
# Local build output path (relative to project root)
LOCAL_BUILD_PATH=zig-out/bin/portweaver

# ========================================
# Behavior Settings
# ========================================
# Automatically restart service after upload
AUTO_RESTART_SERVICE=true

# File watch debounce threshold in milliseconds
# Prevents multiple builds triggered by rapid file changes
WATCH_DEBOUNCE_MS=10000
